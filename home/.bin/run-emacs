EMACS_RUNNING=0

# TODO change this in run-emacs and xdevenv-emacs using 1 file sourced
if [[ -f /etc/profile ]]; then
  # shellcheck disable=SC1091
  source /etc/profile
fi

if [[ -f /etc/bash.bashrc ]]; then
  # shellcheck disable=SC1091
  source /etc/bash.bashrc
fi

# shellcheck disable=SC1090
if [[ -f ~/.profile ]]; then
  # shellcheck disable=SC1090
  source ~/.profile
fi

if [[ -f ~/.bashrc ]]; then
  # shellcheck disable=SC1090
  source ~/.bashrc
fi

if [[ $RUN_EMACS_BIN = "" ]]; then
  RUN_EMACS_BIN="/opt/local/$USER/$OSFAMILY/emacs/tag-emacs-30.2/bin/emacs"
fi

set -euf -o pipefail

EMACS_ARGS_DICT=(
  --no-site-file
  --no-site-lisp
  --no-splash
  --no-x-resources
  --no-loadup
  --chdir "$HOME"
)

run-renice-all() {
  # TODO: Conflict with ananicy
  if [[ -f /usr/local/bin/renice-all ]] && type -P sudo &>/dev/null; then
    (sleep 5 && sudo /usr/local/bin/renice-all) &
    disown
  fi
}

is-emacs-server-running() {
  local result
  result=$(emacsclient -e "(+ 1 1)" 2>/dev/null)
  [[ $result = 2 ]] && return 0
  return 1
}

is-emacs-daemon() {
  local result
  result=$(emacsclient -e "(daemonp)" 2>/dev/null)
  [[ $result = t ]] && return 0
  return 1
}

if ! [[ -f "$RUN_EMACS_BIN" ]]; then
  echo "Error: File not found: '$RUN_EMACS_BIN'" >&2
  exit 1
fi

if is-emacs-server-running; then
  if is-emacs-daemon; then
    exec "emacsclient" -c
    exit 1
  else
    EMACS_RUNNING=1
  fi
else
  if [[ $EMACS_RUNNING -ne 0 ]]; then
    if pgrep --quiet --exact emacs; then
      EMACS_RUNNING=1
    fi
  fi
fi

if [[ $EMACS_RUNNING -ne 0 ]]; then
  echo "Emacs is already running." >&2
  exit 1
else
  exec "$RUN_EMACS_BIN" "${EMACS_ARGS_DICT[@]}" "$@"
fi

# disown
# run-renice-all

